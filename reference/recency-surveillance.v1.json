                      },
                      "first_time_hiv_test": {
                        "type": "string"
                      },
                      "special_category_other": {
                        "type": "string"
                      },
                      "special_category": {
                        "type": "string"
                      },
                      "reason_for_testing_other": {
                        "type": "string"
                      },
                      "reason_for_testing": {
                        "type": "string"
                      },
                      "community_testing_entry_point_other": {
                        "type": "string"
                      },
                      "community_testing_entry_point": {
                        "type": "string"
                      },
                      "health_unit_testing_entry_point_other": {
                        "type": "string"
                      },
                      "health_unit_testing_entry_point": {
                        "type": "string"
                      },
                      "hts_approach": {
                        "type": "string"
                      },
                      "hts_delivery_model": {
                        "type": "string"
                      },
                      "accompanied_by_other": {
                        "type": "string"
                      },
                      "accompanied_by": {
                        "type": "string"
