                      "dhis2_orgunit_uuid",
                      "hiv_final_test_result",
                      "date_of_birth",
                      "sex",
                      "visit_date",
                      "serial_number",
                      "encounter_uuid"
                    ],
                    "properties": {
                      "dhis2_orgunit_uuid": {
                        "type": "string",
