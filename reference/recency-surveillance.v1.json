    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://ugisl.mets.or.ug",
      "description": "URL to the OpenHIM based mediator"
    }
  ],
  "paths": {
    "/recency": {
      "post": {
        "summary": "",
        "operationId": "recency",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "security": [
          {
            "HTTP Basic Authenticatiion": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
