                        "type": "string"
                      },
                      "pretest_counselling_done": {
                        "type": "string"
                      },
                      "partner_recent_test_result": {
                        "type": "string"
                      },
                      "prior_partner_testing": {
                        "type": "string"
                      },
                      "number_of_sexual_partners_last_12_months": {
                        "type": "integer"
                      },
                      "number_of_tests_last_12_months": {
                        "type": "string"
                      },
                      "last_hiv_test_result": {
                        "type": "string"
                      },
                      "last_hiv_test_date": {
